<!DOCTYPE html>
<!-- start that AngularJS app -->
<html ng-app= "theList">
<head>
  <title>The List</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>


<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="#">The List</a>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to "Activities", '#/activities'  %></li>
        <li><%= link_to "Categories", '#/categories'  %></li>
        <li><%= link_to "Scaffolding Activities", activities_path  %></li>
        <li><%= link_to "Scaffolding Categories", categories_path  %></li>
      </ul>
    </div>
  </div>
</div>

  <!-- start that AngularJS view -->
  <div class="container" ng-view>
    <div class="row">
      <div class="col-sm-12">
        <%= bootstrap_flash %>
        <%= yield %>
      </div>
    </div><!--/row-->
  </div>

</body>
</html>
